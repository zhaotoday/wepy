<template>
  <view class="c-overlay" hidden="{{!visible}}" @tap="hide"/>
  <view class="c-modal" hidden="{{!visible}}">
    <slot name="content"/>
  </view>
</template>

<style lang="scss" src="./styles.scss"></style>

<script>
  import wepy from 'wepy'

  export default class extends wepy.component {
    data = {
      visible: true
    }

    methods = {
      show () {
        this.visible = true
      },
      hide () {
        this.visible = false
      }
    }
  }
</script>
